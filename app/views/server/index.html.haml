= stylesheet_link_tag "server"

%h2.float_left.left_padding
  = "#{current_user.username}'s Servers"

#server_list
  %table
    %tr
      %th
        Server Name
      %th
        Owner
      %th
        IP Address
      %th
        Description
      %th
        Edit
        \/
        Delete
    - @servers.each do |server|
      %tr{class: cycle("alternating", nil)}
        %td
          = link_to server.name, server_path(server.id)
        %td
          = server.user.username
        %td
          = server.ip_address
          &colon;
          = server.port
        %td
          = server.description
        %td
          = link_to "Edit", edit_server_path(server)
          \/
          = link_to "Delete", server, confirm: "Are you sure?", method: :delete

  = link_to "Add New Server", new_server_path, class: "float_left left_padding top_padding"



